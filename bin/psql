#!/bin/bash

if [[ $1 == "" ]]
then echo "USAGE : ./psql gargantext.ini"
else
  getter () {
    grep $2 $1 | sed "s/^.*= //"
  }

  USER=$(getter $1 "DB_USER")
  NAME=$(getter $1 "DB_NAME")

  PASS=$(getter $1 "DB_PASS")
  HOST=$(getter $1 "DB_HOST")
  PORT=$(getter $1 "DB_PORT")


  psql "postgresql://${USER}:${PASS}@${HOST}:${PORT}/${NAME}"

fi



